{
    "extends": "standard",
    "plugins": [
        "import"
    ],
    "globals": {
      "$": true,
      "cancelAnimationFrame": true,
      "requestAnimationFrame": true
    },
    "rules": {
      "one-var": ["error", {
        "initialized": "always",
        "uninitialized": "always"
      }],
      "valid-jsdoc": "error",
      "semi": ["error", "always"],
      "no-trailing-spaces": ["error", { "skipBlankLines": true }]
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true,
        "browser": true
    }
}
